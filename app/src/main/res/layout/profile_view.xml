<?xml version="1.0" encoding="utf-8"?>


<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:alpha="0.9"
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="32dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="418dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_pencil"

                android:layout_marginEnd="32dp"
                android:layout_marginTop="25dp"
                android:id="@+id/pro_edit"
                android:layout_alignParentTop="true"

                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/pro_email_value" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                app:srcCompat="@drawable/ic_users"
                android:id="@+id/imageView8"
                android:layout_below="@+id/pro_edit"
                android:layout_centerHorizontal="true" />

            <com.kaalivandi.UI.IosLight
                android:text="USER NAME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pro_name_value"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imageView8"
              />

            <com.kaalivandi.UI.IosLight
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pro_number_value"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/pro_name_value"
                android:layout_centerHorizontal="true" />

            <com.kaalivandi.UI.IosLight
                android:text="EMail Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pro_email_value"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_marginTop="26dp"
                android:layout_below="@+id/pro_number_value"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</ScrollView>