<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_pencil"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="25dp"
        android:id="@+id/pro_edit" />

    <TextView
        android:text="USER NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:id="@+id/pro_name_value"
        android:layout_below="@+id/pro_name_text"
        android:layout_alignLeft="@+id/pro_name_text"
        android:layout_alignStart="@+id/pro_name_text"
        android:textSize="24sp" />

    <TextView
        android:text="EMail Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pro_email_text"
        android:layout_alignLeft="@+id/pro_number_value"
        android:layout_alignStart="@+id/pro_number_value"
        android:layout_marginTop="12dp"
        android:id="@+id/pro_email_value"
        android:textSize="24sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/pro_number_value"
        android:textSize="24sp"
        android:layout_below="@+id/pro_number_text"
        android:layout_alignLeft="@+id/pro_name_value"
        android:layout_alignStart="@+id/pro_name_value" />

    <TextView
        android:text="PROFILE INFO"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pro_title"
        android:textSize="26sp"
        android:layout_alignBottom="@+id/pro_edit"
        android:layout_alignRight="@+id/pro_number_value"
        android:layout_alignEnd="@+id/pro_number_value"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:id="@+id/pro_name_text"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/pro_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Phone Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pro_number_text"
        android:textSize="22sp"
        android:layout_below="@+id/pro_name_value"
        android:layout_alignLeft="@+id/pro_name_text"
        android:layout_alignStart="@+id/pro_name_text"
        android:layout_marginTop="24dp" />

    <TextView
        android:text="E-mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pro_email_text"
        android:textSize="22sp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/pro_number_value"
        android:layout_alignLeft="@+id/pro_number_text"
        android:layout_alignStart="@+id/pro_number_text" />

</RelativeLayout>