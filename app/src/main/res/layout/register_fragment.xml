<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/login_back"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/login_back"
    android:layout_height="match_parent">





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to KaaliVandi"
        android:id="@+id/register_title"
        android:textSize="@dimen/register_page_title_text_size"
        android:textColor="@color/login_text_color"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="4dp"
        android:layout_below="@id/register_title"
        android:background="@color/register_contrast"
        android:layout_alignLeft="@id/register_title"
        android:layout_alignRight="@id/register_title">

    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Let&apos;s set you up qucikly"
        android:id="@+id/register_sub_title"
        android:layout_below="@+id/register_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="16sp" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/register_name_ted"
        android:hint="User Name"
        style="@style/register_tel"
        android:background="@drawable/edi_text_rounded"
        android:layout_below="@+id/register_sub_title"

        android:layout_marginTop="32dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/login_edittext"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/register_email_ted"
        android:layout_below="@+id/register_name_ted"
        android:hint="Email Address"
        android:background="@drawable/edi_text_rounded"

        style="@style/register_tel">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/login_edittext"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/register_phone_ted"
        android:layout_below="@+id/register_email_ted"
        android:hint="Phone Number"
        android:background="@drawable/edi_text_rounded"

        style="@style/register_tel">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/login_edittext"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/register_password_ted"
        android:layout_below="@+id/register_phone_ted"
        android:hint="Password"
        android:background="@drawable/edi_text_rounded"

        style="@style/register_tel">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/login_edittext"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/register_reenter_pass_ted"
        android:layout_below="@+id/register_password_ted"
        android:hint="Re Enter Password"
        android:background="@drawable/edi_text_rounded"

        style="@style/register_tel">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/login_edittext"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignLeft="@id/register_password_ted"
        android:layout_alignStart="@+id/register_password_ted"
        android:layout_alignRight="@id/register_password_ted"
        android:layout_alignEnd="@id/register_password_ted"

        android:layout_below="@+id/register_reenter_pass_ted"
        android:text="Submit"
        android:id="@+id/register_button"
        android:background="@drawable/register_button_background"
        android:layout_marginTop="@dimen/register_button_margin_top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_button"
        android:text="or SignIn"
        android:id="@+id/register_signin"
        android:layout_marginTop="10dp"
        android:textSize="16sp"

        android:layout_centerHorizontal="true" />
</RelativeLayout>
</android.support.v4.widget.NestedScrollView>

