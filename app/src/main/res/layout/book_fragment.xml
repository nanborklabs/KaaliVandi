<?xml version="1.0" encoding="utf-8"?>

<com.flipboard.bottomsheet.BottomSheetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomsheet"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout

    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"

        android:ems="10"
        android:background="?android:selectableItemBackground"
        android:id="@+id/from_et"
        android:text="Click to select"

        android:layout_alignTop="@+id/from_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/from_to_text"

        android:text="From"
        android:gravity="center"
        android:id="@+id/from_text"
        android:layout_marginTop="@dimen/frag_margin_top"
        android:layout_marginLeft="@dimen/frag_margin_left"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To"
        android:id="@+id/to_text"
        style="@style/from_to_text"
        android:layout_marginTop="52dp"
        android:textSize="25sp"
        android:layout_below="@+id/from_et"
        android:layout_alignLeft="@+id/from_text"
        android:layout_alignStart="@+id/from_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/to_et"
        android:text="Click to select Destination"
        android:layout_alignBottom="@+id/to_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />




    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="@dimen/frag_type_height"
        android:id="@+id/frag_rg"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/to_text"
        android:layout_marginTop="35dp">
        <RadioButton
            android:layout_width="0dp"
            android:text="ACE"
            android:layout_weight="1"
            android:id="@+id/ace_radio"
            android:layout_height="match_parent" />
        <RadioButton
            android:layout_width="0dp"
            android:text="TRUCK"
            android:layout_weight="1"
            android:id="@+id/truck_radio"
            android:layout_height="match_parent" />
    </RadioGroup>



    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/book_now_button"
        android:text="Book"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

   </RelativeLayout>
    </com.flipboard.bottomsheet.BottomSheetLayout>