<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_back"
  >
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/login_back"
        android:layout_height="match_parent">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kaalivandi "
        android:id="@+id/about_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:textColor="@color/whites"
        android:textSize="28sp" />

    <com.kaalivandi.UI.TitleTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kaalivandi is Online Potral for Connecting heavy vehcle drivers eith ENd users that is you"
        android:id="@+id/about_title_sub"
        android:layout_below="@+id/about_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="22sp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Our Motto"
        android:id="@+id/about_motto"
        android:layout_below="@+id/about_title_sub"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:textColor="@color/whites"
        android:textSize="28sp" />

    <com.kaalivandi.UI.TitleTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Finding Heavy vehicle  has always been hassle we try to solve that through Technology"
        android:id="@+id/about_motto_sub"
        android:layout_below="@+id/about_motto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Why Kaalivandi"
        android:id="@+id/about_y_kaali"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/about_motto_sub"
        android:textColor="@color/whites"
        android:textSize="28sp" />

    <com.kaalivandi.UI.TitleTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Drivers who take on a trip return empty anded whil return journey , we try to connect those drives with end customers therby making a profit all for bith drivers and users and us"
        android:id="@+id/about_y_sub"
        android:layout_below="@+id/about_y_kaali"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:textSize="22sp" />
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>