<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <com.kaalivandi.UI.CEditText
        android:text="EMail Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView35"
        android:layout_alignLeft="@+id/edit_number_box"
        android:layout_alignStart="@+id/edit_number_box"
        android:layout_marginTop="12dp"
        android:id="@+id/edit_email_box"
        android:textSize="24sp" />

    <view
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/name_divider"

        android:layout_marginTop="6dp"

        android:layout_below="@+id/edit_name_box"
        android:layout_alignLeft="@+id/textView33"
        android:layout_alignStart="@+id/textView33"
      />

    <view
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/phone_divider"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/edit_number_box"
        android:layout_alignLeft="@+id/textView35"
        android:layout_alignStart="@+id/textView35"
        android:layout_alignRight="@+id/name_divider"
        android:layout_alignEnd="@+id/name_divider" />

    <view
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/email_divider"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/edit_email_box"
        android:layout_alignLeft="@+id/textView35"
        android:layout_alignStart="@+id/textView35"
        android:layout_alignRight="@+id/phone_divider"
        android:layout_alignEnd="@+id/phone_divider" />

    <com.kaalivandi.UI.CEditText
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/edit_number_box"
        android:textSize="24sp"
        android:layout_below="@+id/textView33"
        android:layout_alignLeft="@+id/edit_name_box"
        android:layout_alignStart="@+id/edit_name_box" />

    <com.kaalivandi.UI.IosLight
        android:text="Phone Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/textView33"
        android:textSize="22sp"
        android:layout_below="@+id/name_divider"
        android:layout_alignLeft="@+id/name_text"
        android:layout_alignStart="@+id/name_text" />

    <com.kaalivandi.UI.IosLight
        android:text="E-mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/textView35"
        android:textSize="22sp"
        android:layout_below="@+id/phone_divider"
        android:layout_alignLeft="@+id/textView33"
        android:layout_alignStart="@+id/textView33" />

    <view
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/pro_divider"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/edi_prfile_title"
        android:layout_alignLeft="@+id/edi_prfile_title"
        android:layout_alignStart="@+id/edi_prfile_title" />

    <com.kaalivandi.UI.IosLight
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:id="@+id/name_text"
        android:textSize="22sp"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/pro_divider"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.kaalivandi.UI.IosMed
        android:text="CHANGE DETAILS"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edi_prfile_title"
        android:textSize="26sp"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/name_text"
        android:layout_alignStart="@+id/name_text" />

    <com.kaalivandi.UI.CEditText
        android:text="USER NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="11dp"
        android:id="@+id/edit_name_box"
        android:textSize="24sp"
        android:layout_below="@+id/name_text"
        android:layout_alignLeft="@+id/name_divider"
        android:layout_alignStart="@+id/name_divider" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_next"
        android:layout_below="@+id/email_divider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:id="@+id/edit_submit_image" />

</RelativeLayout>