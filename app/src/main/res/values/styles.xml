<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="from_to_text">
        <item name="android:textSize">@dimen/frag_text_size_to_from</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="frag_switch">
        <item name="android:textSize">@dimen/switch_text_size</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="login_edittext">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textColor">@color/whites</item>

    </style>

    <style name="register_tel">
        <item name="android:layout_marginLeft">@dimen/register_margin_left</item>
        <item name="android:layout_marginRight">@dimen/register_margin_right</item>
        <item name="android:layout_marginTop">@dimen/register_margin_top</item>
        <item name="android:layout_height">@dimen/regsiter_box_height</item>
        <item name="android:padding">4dp</item>

    </style>

    <style name="register_button_style"></style>

    <style name="term_text_style">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <dimen name="register_margin_left">32dp</dimen>
</resources>
