<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.kaalivandi.UI.IosLight
        android:text="EDIT PROFILE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:id="@+id/ed_title" />

    <com.kaalivandi.UI.IosLight
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_title"
        android:layout_alignLeft="@+id/ed_title"
        android:layout_alignStart="@+id/ed_title"
        android:layout_marginTop="12dp"
        android:id="@+id/textView31" />

    <com.kaalivandi.UI.IosLight
        android:text="E-Mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView32"
        android:layout_below="@+id/ed_name"
        android:layout_alignLeft="@+id/textView31"
        android:layout_alignStart="@+id/textView31"
        android:layout_marginTop="8dp" />

    <com.kaalivandi.UI.CEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_below="@+id/textView32"
        android:layout_alignLeft="@+id/ed_name"
        android:layout_alignStart="@+id/ed_name"
        android:layout_marginTop="8dp"
        android:id="@+id/ed_email" />

    <com.kaalivandi.UI.IosLight
        android:text="Phone Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/textView33"
        android:layout_below="@+id/ed_email"
        android:layout_alignLeft="@+id/textView32"
        android:layout_alignStart="@+id/textView32" />

    <com.kaalivandi.UI.CEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_below="@+id/textView33"
        android:layout_alignLeft="@+id/ed_email"
        android:layout_alignStart="@+id/ed_email"
        android:layout_marginTop="8dp"
        android:id="@+id/ed_phone_number" />

    <com.kaalivandi.UI.CEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="12dp"
        android:id="@+id/ed_name"
        android:layout_below="@+id/textView31"
        android:layout_alignLeft="@+id/textView32"
        android:layout_alignStart="@+id/textView32" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_next"
        android:id="@+id/ed_image"
        android:layout_marginRight="59dp"
        android:layout_marginEnd="59dp"
        android:layout_alignTop="@+id/ed_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>